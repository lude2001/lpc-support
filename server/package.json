{
  "name": "lpc-language-server",
  "description": "LPC language server using ANTLR",
  "version": "1.0.0",
  "engines": {
    "node": "*"
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "antlr4ts": "^0.5.0-alpha.4"
  },
  "devDependencies": {
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "antlr": "antlr4ts -visitor -o src/parser grammar/LPCLexer.g4 grammar/LPCParser.g4",
    "build": "npm run antlr && tsc",
    "watch": "tsc -w"
  }
}