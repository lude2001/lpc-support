{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": ["ES2020", "DOM"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "downlevelIteration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "tests/**/*",
        "test-formatter.ts",
        "*.test.ts",
        "*.spec.ts"
    ]
}
